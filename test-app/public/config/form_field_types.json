{
  "meta": {
    "version": "1.0.0",
    "description": "Configurable field type definitions for hazo_data_forms"
  },
  "field_types": {
    "tfn": {
      "base_type": "text",
      "label": "Tax File Number",
      "pattern": "^\\d{9}$",
      "display_format": "XXX XXX XXX",
      "input_mask": "### ### ###",
      "placeholder": "XXX XXX XXX",
      "max_length": 11,
      "digit_count": 9,
      "validation_message": "Tax File Number must be 9 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "abn": {
      "base_type": "text",
      "label": "Australian Business Number",
      "pattern": "^\\d{11}$",
      "display_format": "XX XXX XXX XXX",
      "input_mask": "## ### ### ###",
      "placeholder": "XX XXX XXX XXX",
      "max_length": 14,
      "digit_count": 11,
      "validation_message": "Australian Business Number must be 11 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "acn": {
      "base_type": "text",
      "label": "Australian Company Number",
      "pattern": "^\\d{9}$",
      "display_format": "XXX XXX XXX",
      "input_mask": "### ### ###",
      "placeholder": "XXX XXX XXX",
      "max_length": 11,
      "digit_count": 9,
      "validation_message": "Australian Company Number must be 9 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "phone_au": {
      "base_type": "tel",
      "label": "Australian Phone Number",
      "pattern": "^(0[2-9]\\d{8}|04\\d{8})$",
      "display_format": "XXXX XXX XXX",
      "input_mask": "#### ### ###",
      "placeholder": "0400 123 456",
      "max_length": 12,
      "digit_count": 10,
      "validation_message": "Invalid Australian phone number",
      "input_mode": "tel"
    },
    "phone_us": {
      "base_type": "tel",
      "label": "US Phone Number",
      "pattern": "^\\d{10}$",
      "display_format": "(XXX) XXX-XXXX",
      "input_mask": "(###) ###-####",
      "placeholder": "(555) 123-4567",
      "max_length": 14,
      "digit_count": 10,
      "validation_message": "Invalid US phone number",
      "input_mode": "tel"
    },
    "ssn": {
      "base_type": "text",
      "label": "Social Security Number",
      "pattern": "^\\d{9}$",
      "display_format": "XXX-XX-XXXX",
      "input_mask": "###-##-####",
      "placeholder": "XXX-XX-XXXX",
      "max_length": 11,
      "digit_count": 9,
      "validation_message": "Social Security Number must be 9 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "ein": {
      "base_type": "text",
      "label": "Employer Identification Number",
      "pattern": "^\\d{9}$",
      "display_format": "XX-XXXXXXX",
      "input_mask": "##-#######",
      "placeholder": "XX-XXXXXXX",
      "max_length": 10,
      "digit_count": 9,
      "validation_message": "Employer Identification Number must be 9 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "postcode_au": {
      "base_type": "text",
      "label": "Australian Postcode",
      "pattern": "^\\d{4}$",
      "display_format": "XXXX",
      "input_mask": "####",
      "placeholder": "2000",
      "max_length": 4,
      "digit_count": 4,
      "validation_message": "Australian postcode must be 4 digits",
      "input_mode": "numeric"
    },
    "zipcode_us": {
      "base_type": "text",
      "label": "US ZIP Code",
      "pattern": "^\\d{5}$",
      "display_format": "XXXXX",
      "input_mask": "#####",
      "placeholder": "12345",
      "max_length": 5,
      "digit_count": 5,
      "validation_message": "ZIP code must be 5 digits",
      "input_mode": "numeric"
    },
    "zipcode_us_plus4": {
      "base_type": "text",
      "label": "US ZIP+4 Code",
      "pattern": "^\\d{9}$",
      "display_format": "XXXXX-XXXX",
      "input_mask": "#####-####",
      "placeholder": "12345-6789",
      "max_length": 10,
      "digit_count": 9,
      "validation_message": "ZIP+4 code must be 9 digits",
      "input_mode": "numeric"
    },
    "credit_card": {
      "base_type": "text",
      "label": "Credit Card Number",
      "pattern": "^\\d{16}$",
      "display_format": "XXXX XXXX XXXX XXXX",
      "input_mask": "#### #### #### ####",
      "placeholder": "1234 5678 9012 3456",
      "max_length": 19,
      "digit_count": 16,
      "validation_message": "Credit card number must be 16 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "bsb": {
      "base_type": "text",
      "label": "BSB Number",
      "pattern": "^\\d{6}$",
      "display_format": "XXX-XXX",
      "input_mask": "###-###",
      "placeholder": "123-456",
      "max_length": 7,
      "digit_count": 6,
      "validation_message": "BSB must be 6 digits",
      "input_mode": "numeric",
      "style_class": "field_mono"
    },
    "currency_aud": {
      "base_type": "currency",
      "label": "Australian Dollars",
      "prefix": "$",
      "decimal_places": 2,
      "min": 0
    },
    "currency_usd": {
      "base_type": "currency",
      "label": "US Dollars",
      "prefix": "$",
      "decimal_places": 2,
      "min": 0
    },
    "currency_eur": {
      "base_type": "currency",
      "label": "Euros",
      "prefix": "EUR ",
      "decimal_places": 2,
      "min": 0
    },
    "currency_gbp": {
      "base_type": "currency",
      "label": "British Pounds",
      "prefix": "GBP ",
      "decimal_places": 2,
      "min": 0
    },
    "percentage_whole": {
      "base_type": "percentage",
      "label": "Percentage (Whole)",
      "decimal_places": 0,
      "min": 0,
      "max": 100,
      "suffix": "%"
    },
    "percentage_decimal": {
      "base_type": "percentage",
      "label": "Percentage (Decimal)",
      "decimal_places": 2,
      "min": 0,
      "max": 100,
      "suffix": "%"
    }
  }
}
